# ===========================================
# SAIL v2 — Environment Variables
# Copy to .env.local and fill in real values
# ===========================================

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- Google Gemini AI ---
GOOGLE_GEMINI_API_KEY=your-gemini-key

# --- ElevenLabs (Voice Synthesis) ---
ELEVENLABS_API_KEY=your-elevenlabs-key

# --- Deepgram (Speech-to-Text) ---
DEEPGRAM_API_KEY=your-deepgram-key

# --- Google Cloud (STT / TTS fallback) ---
GOOGLE_CLOUD_API_KEY=your-google-cloud-key

# --- Stripe (Payments) ---
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# --- Zoho Bigin CRM ---
ZOHO_BIGIN_CLIENT_ID=your-client-id
ZOHO_BIGIN_CLIENT_SECRET=your-client-secret
ZOHO_BIGIN_REFRESH_TOKEN=your-refresh-token

# --- Google OAuth (configured in Supabase Auth) ---
GOOGLE_OAUTH_CLIENT_ID=your-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-oauth-client-secret

# --- Sentry (Error Tracking) ---
SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# --- PostHog (Product Analytics) ---
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# --- Google Analytics ---
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-...

# --- MorphCast (future — emotion AI) ---
NEXT_PUBLIC_MORPHCAST_LICENSE_KEY=your-morphcast-key

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SAIL
